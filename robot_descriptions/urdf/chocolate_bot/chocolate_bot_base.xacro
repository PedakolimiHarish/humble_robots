<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    
    <!-- Parameters for mobile base -->
    <!-- <xacro:property name="base_length" value ="1"/>
    <xacro:property name="base_width" value ="0.5"/>
    <xacro:property name="base_height" value ="0.02"/> -->

    <!-- Parameters for mobile base wheels -->
    <!-- <xacro:property name="wheel_radius" value ="0.18"/>
    <xacro:property name="wheel_length" value ="0.05"/>
 -->


<!-- ********************** Base footprint link and joint ********************** -->
    <link name="base_footprint"/>

    <joint name="base_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>


<!-- ********************** Base link ********************** -->
    <link name="base_link">

        <visual>
            <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file:///$(find robot_descriptions)/urdf/chocolate_bot/meshes/base_link.dae" scale="1 1 1"/>
            </geometry>
            <material name="Blue"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.15 0.10 0.06"/>
            </geometry>
        </collision>

        <xacro:box_inertia mass="1.5" length="0.15" width="0.10" height="0.06"
                            xyz="0 0 0" rpy="0 0 0" />

    </link>

    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>


<!-- ********************** Wheel links and joints ********************** -->
    <xacro:macro name="wheel_link" params="prefix xyz rpy">
        <link name="${prefix}_wheel_link">

            <visual name="rim">
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="file:///$(find robot_descriptions)/urdf/chocolate_bot/meshes/wheel_rim.dae"  scale="1 1 1"/>
                </geometry>
                <material name="Red" />
            </visual>

            <visual name="tyre">
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="file:///$(find robot_descriptions)/urdf/chocolate_bot/meshes/wheel_tyre.dae"  scale="1 1 1"/>
                </geometry>
                <material name="Black" />
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    
                </geometry>
            </collision>

            <!-- <xacro:cylinder_inertia mass="0.05" radius="${wheel_radius}" height="${wheel_length}" 
                                    xyz="0 0 0" rpy="${pi / 2.0} 0 0" /> -->
        </link>

        

        <joint name="base_${prefix}_wheel_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="base_link"/>
            <child link="${prefix}_wheel_link"/>
            <axis xyz="1 0.0 0.0"/>
        </joint>

        <gazebo reference="rim">
            <material>Gazebo/Red</material>
        </gazebo>
        <gazebo reference="tyre">
            <material>Gazebo/Red</material>
        </gazebo>

    </xacro:macro>

    <xacro:wheel_link prefix="front_right" xyz="0.05 0.05 0.005" rpy="0 0 0"/>
    <xacro:wheel_link prefix="back_right" xyz="0.05 -0.05 0.005" rpy="0 0 0"/>
    <xacro:wheel_link prefix="front_left" xyz="-0.05 0.05 0.005" rpy="0 0 3.14"/>
    <xacro:wheel_link prefix="back_left" xyz="-0.05 -0.05 0.005" rpy="0 0 3.14"/>
    
</robot>