<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:skid_steer_drive leftFrontJoint = "base_front_left_wheel_joint" rightFrontJoint = "base_front_right_wheel_joint" 
                            leftRearJoint = "base_back_left_wheel_joint" rightRearJoint = "base_back_right_wheel_joint" 
                            robotBaseFrame = "base_link" wheelDiameter = "0.165" wheelSeparation = "1" />

<!-- ********************** Base footprint link and joint ********************** -->
    <link name="base_footprint"/>

    <joint name="base_joint" type="fixed">
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

<!-- ********************** Base link ********************** -->
    <link name="base_link">

        <visual>
            <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file:///$(find robot_descriptions)/urdf/chocolate_bot/meshes/base_link.dae" scale="10 10 10"/>
            </geometry>
            <material name="Blue"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 1.57"/>
            <geometry>
                <box size="1.5 1.0 0.6"/>
            </geometry>
        </collision>

        <xacro:box_inertia mass="1.5" length="1.5" width="1.0" height="0.6"
                            xyz="0.0 0.0 0.3" rpy="1.57 0 0.0" />

    </link>

    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>


<!-- ********************** Wheel links and joints ********************** -->
    <xacro:macro name="wheel_link" params="prefix xyz rpy Jrpy">
        <link name="${prefix}_wheel_link">

            <visual name="rim">
                <origin xyz="0 0 0" rpy="${rpy}" />
                <geometry>
                    <mesh filename="file:///$(find robot_descriptions)/urdf/chocolate_bot/meshes/wheel_rim.dae"  scale="10 10 10"/>
                </geometry>
                <material name="Red" />
            </visual>

<!--             <visual name="tyre">
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="file:///$(find robot_descriptions)/urdf/chocolate_bot/meshes/wheel_tyre.dae"  scale="10 10 10"/>
                </geometry>
                <material name="Black" />
            </visual> -->

            <collision>
                <origin xyz="0.015 0 0" rpy="0 1.57 0" />
                <geometry>
                    <cylinder radius="0.15" length="0.03"/>
                </geometry>
            </collision>

            <xacro:cylinder_inertia mass="0.05" radius="0.15" height="0.03" 
                                    xyz="0.015 0 0" rpy="0 1.57 0" />
        </link>

        <joint name="base_${prefix}_wheel_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${Jrpy}"/>
            <parent link="base_link"/>
            <child link="${prefix}_wheel_link"/>
            <axis xyz="1 0.0 0.0"/>
        </joint>

        <gazebo reference="wheel_link">
            <material>Gazebo/Red</material>
        </gazebo>

    </xacro:macro>

    <xacro:wheel_link prefix="front_right" xyz="0.5 0.5 0.05" rpy="0 0 0" Jrpy="0 0 0"/>
    <xacro:wheel_link prefix="back_right" xyz="0.5 -0.5 0.05" rpy="0 0 0" Jrpy="0 0 0"/>
    <xacro:wheel_link prefix="front_left" xyz="-0.5 0.5 0.05" rpy="0 0 3.014" Jrpy="0 0 0"/>
    <xacro:wheel_link prefix="back_left" xyz="-0.5 -0.5 0.05" rpy="0 0 3.14" Jrpy="0 0 0"/>
    
</robot>